= render 'shared/top_page_header'

.profile-wrapper
  = render 'mypage-sidebar'
  .mypage-wrapper
    .mypage__main
      %section.mypage__main__profile
        =link_to'#', class: "mypage__main__profile__link" do
          %figure.mypage__main__profile__figure
            = image_tag '', size: "60x60"
          %h2.mypage__main__profile__name
            ユーザー名
          .mypage__main__profile__figure__data
            .mypage__main__profile__figure__data__evaluation
              評価
              %span.mypage__main__profile__figure__data__span 0
            .mypage__main__profile__figure__data__number
              出品数
              %span.mypage__main__profile__figure__data__span 0

      %section.mypage__main__notification-todo
        %ul.mypage__main__notification-todo__tabs
          %li.mypage__main__notification-todo__tabs__notification
            %h3
              =link_to '#', class: "mypage__main__notification-todo__tabs__notification__link" do
                お知らせ
          %li.mypage__main__notification-todo__tabs__todo
            %h3
              =link_to '#' , class: "mypage__main__notification-todo__tabs__todo__link" do
                やることリスト

        .mypage__main__notification-todo__content
          %ul.mypage__main__notification-todo__content__notification
            %li.mypage__main__notification-todo__content__notification__li
              =link_to '#', class: "mypage__main__notification-todo__content__notification__link" do
                %figure.mypage__main__notification-todo__content__notification__figure
                  = image_tag 'logo_red.svg', size: "48x48", class: "mypage__main__notification-todo__content__notification__img"
                .mypage__main__notification-todo__content__notification__text
                  《新規登録者限定》
                  %time.mypage__main__notification-todo__content__notiofication__text__time
                    = icon('far', 'clock', class: 'mypage__main__notification-todo__content__time')
                    %span 1日前
                    = icon('fas', 'chevron-right', class: 'mypage__main__notification-todo__content__mark')
          .mypage__main__notification-todo__content__list
            =link_to '#', class: "mypage__main__notification-todo__content__list__link" do
              一覧を見る
      %section.mypage__main__product
        %h2.mypage__main__product__head
          購入した商品
        %ul.mypage__main__product__tabs
          %li.mypage__main__product__tabs__during-trading
            %h3
              =link_to("取引中",'#', class: "mypage__main__product__tabs__during-trading__link")
          %li.mypage__main__product__tabs__after-trading
            %h3
              =link_to "過去の取引",'#', class: "mypage__main__product__tabs__after-trading__link"
        .mypage__main__product__content
          = image_tag 'logo_gray.svg', size: "83x90", class: "mypage__main__product__content__during-trading__text__img"
          .mypage__main__product__content__text
            取引中の商品がありません

= render 'shared/top_page_footer_app'
= render 'shared/top_page_footer'
= render 'shared/display_btn'